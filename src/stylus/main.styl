@font-face
  font-family 'cinecaption'
  src url('../file/font/cinecaption2.28.ttf')  format('truetype') 
  font-weight  normal
  font-style   normal 

body, div, footer
  margin 0
  padding 0
a
  text-decoration none
a:link
  color #99f
a:hover
  color #99f
a:visited
  color #000
html, body
  height 100%
body
  font-family 'cinecaption'
  background-color #000
  font-size 14px
h1
  font-size 2em
  background-color #000
  color #99f
  margin 0
  padding 0.5em 0 1em 1em
#container
  padding 1em 4em
  margin 0 4em
  background-color #fff
  line-height 1.5
#application
  text-align center
#canvas
  width  640px
  height 360px
  background-color #000

#control
  text-align center
  input
    font-family 'cinecaption'
    font-size 14px
    border-radius 5px 5px
    border 2px #99f solid
    padding 4px
    background-color #fff
    margin 0em 1em
  .caption
    input
      background-color #dfdfdf
      padding 0.3em
      margin 0
      border-radius 0 0
      width 30em
  a
    font-family 'cinecaption'
    font-size 14px
    border-radius 5px 5px
    border 2px #99f solid
    padding 4px
    background-color #fff
    margin 0em 1em
#thanks
  padding 0 1em 0 0
footer
  padding 0 1em 1em 0
