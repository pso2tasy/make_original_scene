contentWidth     = 1040px
applicationWidth = 1040px
canvasWidth      = 960px
canvasHeight     = 540px

mainColor        = #fff
subColor         = #000

fontMainColor    = #000

accentColorBlue  = #99f
accentColorGreen  = #9c9
//- accentColorRed   = #d13081

@font-face
  font-family 'cinecaption'
  src local('cinecaption')
  , url('../file/font/cinecaption2.28.woff')  format('woff') 
  , url('../file/font/cinecaption2.28.ttf')  format('truetype') 
  font-weight  normal
  font-style   normal 
//- Roboto を Google Fonts からインポート（Jade内部）

.flipflop
  display none
.flipflop.display_block
  display block
.flipflop.display_inline
  display inline
.flipflop.display_inline-block
  display inline-block
body, div, footer
  margin 0
  padding 0
.copyright
  font-family 'Open Sans'
a
  text-decoration none
a:link
  color accentColorBlue
a:hover
  color accentColorBlue
a:visited
  color fontMainColor
html, body
  height 100%
body
  font-family 'cinecaption'
  background-color subColor
  font-size 14px
h1
  font-size 2em
  background-color subColor
  color accentColorBlue
  margin 0
  padding 0.5em 0 1em 1em
#container
  width            contentWidth
  padding          1em 0
  margin           0 auto
  background-color mainColor
  line-height      1.55
#description
  width      canvasWidth
  text-align left
  margin     0 auto 1em auto
  p
    margin 0 0 1em 0
#application
  width = applicationWidth
#canvas
  display block
  margin auto
  max-width   canvasWidth
  max-height  canvasHeight
  background-color subColor
#easel
  margin  0 auto
  width   canvasWidth
  height  canvasHeight
  background-color subColor
  text-align center
  display table-cell
  vertical-align middle

#workbench
  margin 0 auto
  width  canvasWidth
  height canvasHeight
  background-color subColor
#control
  width   canvasWidth
  text-align center
  margin  0 auto 1em auto
  input
    font-family 'cinecaption'
    font-size 14px
    border-radius 5px 5px
    border 2px accentColorBlue solid
    padding 4px
    background-color mainColor
    margin 0em 1em
    cursor pointer
  input:focus
    outline 1px dotted accentColorBlue
  input[type=text]
    background-color #dfdfdf
  input[type=text]:focus
    outline 0
  #filter
    margin 0.5em 0em;
    input
      border 2px accentColorGreen solid
      margin 0em .5em
    .memory
      display inline-block
      margin 0 0 0 2em
      input
        border 2px #aaa solid
  #makeIt
    margin 0.5em 0em
    input
      margin 0em .5em
      border-radius 5px
      vertical-align bottom
    #caption
      input[type=text]
        cursor text
        margin .5em 0
        padding .3em
        width 35em
      input[type=text]:focus
        background-color mainColor
      .add_2nd_line
        vertical-align top
        margin 0
        height 1em
        padding .3em 0
        font-size 1em
        cursor pointer
    a
      line-height normal
      vertical-align bottom
      font-family 'cinecaption'
      font-size 14px
      border-radius 5px
      border 2px accentColorBlue solid
      padding 4px
      background-color mainColor
      margin 0em .5em
      cursor pointer
    a:link
      color  fontMainColor
      color accentColorBlue
    a:hover
      color  fontMainColor
      color accentColorBlue
    a:visited
      background-color mainColor
      color  fontMainColor
      cursor pointer
  #setting
    margin 0.5em 0em;
    input[type=checkbox]
      cursor pointer
      margin  0 0 0 1em
      padding 0
      width   1.3em
      height  1.3em
      vertical-align bottom
    label
      cursor pointer
    //-input[type=checkbox]:checked
#thanks
  text-align center
  margin  2em 0 0 0
  padding 0 1em 0 0
footer
  text-align center
  padding 0 1em 1em 0
  margin  1em 0 0 0
